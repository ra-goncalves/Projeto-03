<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js" defer></script>
    <script src="~/Scripts/script.js" defer></script>
    <script src="~/Scripts/jquery-3.6.1.min.js" defer></script>
    <script src="~/Scripts/toastr.min.js" defer></script>
</head>

<div class="campo-cadastro">
    <div class="header-cadastro">
        <h2>Cadastro</h2>
        <button onclick="location.href='/Cadastros/Cadastro'" type="button" id="btnCadastrar">Cadastrar</button>
    </div>

    <div class="tabela" id="tabelalista">
        <table>
            <thead>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Status</th>
            <th></th>
            </thead>
            <tbody>
                @foreach (var colaborador in Model)
                {
                    <tr id="colab-@colaborador.idColaboradores">
                        <td>@colaborador.nomeColab</td>
                        <td>@colaborador.emailColab</td>
                        <td>@colaborador.Inativo</td>
                        <td>
                            <a class="material-symbols-outlined" id="btnEditCad" href="/Cadastros/Edit/@colaborador.idColaboradores">edit</a>
                            <button class="material-symbols-outlined" id="btnExcluirCad" onclick="DelColab(@colaborador.idColaboradores, '@colaborador.nomeColab')">delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div data-id="0" class="modal t-modal" tabindex="-1" id="delModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir Colaborador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o colaborador <strong><span id="nomeColabModal"></span></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="ConfirmDelColab()">Confirmar</button>
            </div>
        </div>
    </div>
</div>
</html>
