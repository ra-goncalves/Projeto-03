                <div id="campobusca">
                    <input type="search" name="busca" id="ibusca" placeholder="Pesquisar...">
                </div>

                <div id="perfil">
                    <a href="#">Rafael Gonçalves</a>
                </div>

                <div id="sair">
                    <a href="~/Login/Index">Sair</a>
